@model GestaoEventos.Application.ViewModels.EventoViewModel

@{
    ViewData["Title"] = "Excluir Evento";
}

<div class="row justify-content-center">
    <div class="col-md-8">
    
        <a asp-action="Index" class="text-decoration-none text-muted mb-3 d-inline-block">
            <i class="fa-solid fa-arrow-left me-1"></i> Voltar para lista
        </a>

        <div class="form-card mt-2 border-danger border-top border-4">
            <div class="text-center mb-4">
                <div class="mb-3 text-danger">
                    <i class="fa-solid fa-triangle-exclamation fa-3x"></i>
                </div>
                <h2 class="fw-bold text-danger">Excluir Evento?</h2>
                <p class="text-muted">Esta ação não pode ser desfeita. Tem certeza que deseja remover este registro?</p>
            </div>

            <div class="bg-light p-4 rounded-3 mb-4">
                <h4 class="mb-3 fw-bold text-dark">
                    <i class="fa-regular fa-calendar me-2"></i>Dados do Evento
                </h4>
                <hr class="opacity-25">
                
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.Nome)</dd>

                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Descricao)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Local)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Local)</dd>

                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.DataInicio)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataInicio)</dd>

                    <dt class="col-sm-3 text-muted">@Html.DisplayNameFor(model => model.Capacidade)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Capacidade)</dd>
                </dl>
            </div>
            
            <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa-solid fa-trash me-2"></i>Confirmar Exclusão
                </button>
            </form>
        </div>
    </div>
</div>