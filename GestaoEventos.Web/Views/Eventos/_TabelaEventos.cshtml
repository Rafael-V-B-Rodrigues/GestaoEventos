@model IEnumerable<GestaoEventos.Application.ViewModels.EventoViewModel>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>Categoria</th>
            <th>@Html.DisplayNameFor(model => model.Local)</th>
            <th>@Html.DisplayNameFor(model => model.DataInicio)</th>
            <th>@Html.DisplayNameFor(model => model.Capacidade)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Nenhum evento encontrado.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoriaNome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Local)</td>
                    <td>@item.DataInicio.ToString("g")</td>
                    <td>@Html.DisplayFor(modelItem => item.Capacidade)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Editar</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>