@model IEnumerable<GestaoEventos.Application.ViewModels.CategoriaViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-4">
    <div>
        <h1 class="fw-bold text-dark mb-0">Categorias</h1>
        <p class="text-muted small">Gerencie os tipos de eventos disponíveis</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa fa-plus me-2"></i>Nova Categoria
    </a>
</div>

<div class="card border-0 shadow-sm rounded-3">
    <div class="card-body p-0">
        <div class="table-responsive" style="border-radius: 10px;">
            <table class="table table-hover align-middle mb-0">
                <thead class="text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <tr>
                        <th class="ps-4" style="width: 80%;">@Html.DisplayNameFor(model => model.Nome)</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="2" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-layer-group display-4 mb-3 d-block opacity-25"></i>
                                Nenhuma categoria cadastrada.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    <i class="fa-solid fa-tag text-muted me-2"></i> @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>