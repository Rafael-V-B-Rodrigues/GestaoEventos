@model GestaoEventos.Application.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        
        <a asp-action="Index" class="text-decoration-none text-muted mb-3 d-inline-block">
            <i class="fa-solid fa-arrow-left me-1"></i> Voltar para lista
        </a>

        <div class="form-card mt-2 border-danger border-top border-4">
            <div class="text-center mb-4">
                <div class="mb-3 text-danger">
                    <i class="fa-solid fa-triangle-exclamation fa-3x"></i>
                </div>
                <h2 class="fw-bold text-danger">Excluir Categoria?</h2>
                <p class="text-muted">Atenção: Excluir uma categoria pode afetar eventos vinculados a ela.</p>
            </div>

            <div class="bg-light p-4 rounded-3 mb-4 text-center">
                <h5 class="text-muted mb-2">Categoria Selecionada</h5>
                <h3 class="fw-bold text-dark">@Html.DisplayFor(model => model.Nome)</h3>
            </div>
            
            <form asp-action="Delete" class="d-flex justify-content-center gap-2">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fa-solid fa-trash me-2"></i>Confirmar
                </button>
            </form>
        </div>
    </div>
</div>