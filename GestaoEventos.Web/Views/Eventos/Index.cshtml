@model IEnumerable<GestaoEventos.Application.ViewModels.EventoViewModel>

@{
    ViewData["Title"] = "Meus Eventos";
}

<div class="d-flex justify-content-between align-items-center mb-4 mt-4">
    <div>
        <h1 class="fw-bold text-dark mb-0">Eventos</h1>
        <p class="text-muted small">Gerencie todos os seus eventos em um só lugar</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fa fa-plus me-2"></i>Novo Evento
    </a>
</div>

<div class="card border-0 shadow-sm mb-4" style="border-radius: 12px;">
    <div class="card-body p-2">
        <div class="input-group">
            <span class="input-group-text bg-white border-0 ps-3">
                <i class="fa fa-search text-muted"></i>
            </span>
            <input type="text" id="campoBusca" class="form-control border-0 shadow-none" 
                   placeholder="Pesquise por nome do evento..." autocomplete="off" style="font-size: 1rem;" />
        </div>
    </div>
</div>

<div id="tabelaContainer">
    <partial name="_TabelaEventos" model="Model" />
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#campoBusca").on("keyup", function () {
                var valorBusca = $(this).val();
                $.ajax({
                    url: '@Url.Action("Filter", "Eventos")',
                    type: 'GET',
                    data: { termo: valorBusca },
                    success: function (resultado) {
                        $("#tabelaContainer").html(resultado);
                    },
                    error: function () {
                        console.log("Erro ao filtrar eventos.");
                    }
                });
            });
        });
    </script>
}