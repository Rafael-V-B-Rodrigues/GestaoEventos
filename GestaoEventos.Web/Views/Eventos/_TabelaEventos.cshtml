@model IEnumerable<GestaoEventos.Application.ViewModels.EventoViewModel>

<div class="table-responsive shadow-sm" style="border-radius: 10px;">
    <table class="table table-hover align-middle mb-0 bg-white">
        <thead class="text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <tr>
                <th class="ps-4">@Html.DisplayNameFor(model => model.Nome)</th>
                <th>Categoria</th>
                <th>@Html.DisplayNameFor(model => model.Local)</th>
                <th>Data</th>
                <th>Capacidade</th>
                <th class="text-end pe-4">Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center py-5 text-muted">
                        <i class="fa-regular fa-folder-open display-4 mb-3 d-block opacity-25"></i>
                        Nenhum evento encontrado.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model) {
                    <tr>
                        <td class="ps-4 fw-bold text-dark">@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>
                            <span class="badge bg-light text-primary border border-primary-subtle">
                                @Html.DisplayFor(modelItem => item.CategoriaNome)
                            </span>
                        </td>
                        <td><i class="fa-solid fa-location-dot text-muted me-1"></i> @Html.DisplayFor(modelItem => item.Local)</td>
                        <td>@item.DataInicio.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <i class="fa-solid fa-users text-muted me-1"></i> @Html.DisplayFor(modelItem => item.Capacidade)
                        </td>
                        <td class="text-end pe-4">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                <i class="fa-solid fa-pen"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Excluir">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>